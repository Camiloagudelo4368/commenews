{{#each articles}}
<div class="row">
    <div class="row articleRow">
        <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12 text-right">
            <img class="card-img-top articleImage" src="{{img}}">
        </div>
        <div class="col-lg-7 col-md-7 col-sm-12 col-xs-12">
            <h3 class="articuleHeader"><a href="{{link}}">{{title}}</a></h3>
            <p class="articleDescription">{{description}}</p>
            <button id="{{_id}}" type="button" class="btn btn-primary btn-sm btnComment">
                Comments
            </button>
        </div>
    </div>
</div>
{{/each}}
